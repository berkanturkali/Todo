<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.todo.view.fragments.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_splashScreenFragment_to_loginFragment"
            app:destination="@id/navigation"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreenFragment_to_mainTodoFragment"
            app:destination="@id/mainTodoFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <navigation
        android:id="@+id/navigation"
        app:startDestination="@id/mainFragment">
        <fragment
            android:id="@+id/loginFragment"
            android:name="com.example.todo.view.fragments.authflow.LoginFragment"
            android:label="fragment_login_layout"
            tools:layout="@layout/fragment_login_layout">
            <action
                android:id="@+id/action_loginFragment_to_mainTodoFragment"
                app:destination="@id/mainTodoFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/registerFragment"
            android:name="com.example.todo.view.fragments.authflow.RegisterFragment"
            android:label="fragment_register_layout"
            tools:layout="@layout/fragment_register_layout">
            <action
                android:id="@+id/action_registerFragment_to_fragmentCameraOptionsFragment"
                app:destination="@id/fragmentCameraOptionsFragment" />
            <action
                android:id="@+id/action_registerFragment_to_mainFragment"
                app:destination="@id/mainFragment" />
        </fragment>
        <dialog
            android:id="@+id/fragmentCameraOptionsFragment"
            android:name="com.example.todo.view.fragments.authflow.FragmentCameraOptionsFragment"
            android:label="Camera Options"
            tools:layout="@layout/fragment_camera_options_layout" />
        <fragment
            android:id="@+id/mainFragment"
            android:name="com.example.todo.view.fragments.MainFragment"
            android:label="MainFragment"
            tools:layout="@layout/fragment_main_layout">
            <action
                android:id="@+id/action_mainFragment_to_registerFragment"
                app:destination="@id/registerFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
            <action
                android:id="@+id/action_mainFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
        </fragment>
    </navigation>
    <fragment
        android:id="@+id/mainTodoFragment"
        android:name="com.example.todo.MainTodoFragment"
        android:label="MainTodoFragment"
        tools:layout="@layout/fragment_main_todo_layout">
        <action
            android:id="@+id/action_mainTodoFragment_to_navigation"
            app:destination="@id/navigation"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/mainTodoFragment"
            app:popUpToInclusive="true" />
    </fragment>


</navigation>